<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:elevation="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/pencil_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/trash_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/pencil_edit"
            android:layout_margin="5dp"/>


        <TextView
            android:id="@+id/nombre_donante_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedro López"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/id_donante_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre_donante_lista"
            android:text="id: 67890"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/edad_donante_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_donante_lista"
            android:text="Edad : 30años"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tipo_sangre_donante_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edad_donante_lista"
            android:text="Sangre: Tipo O Rh-"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/peso_donante_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipo_sangre_donante_lista"
            android:text="Peso: 80Kg Estatura : 185cm"
            android:textSize="20dp"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
